{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@components/*": [
        "app/shared/components/*"
      ],
      "@constants/*": [
        "app/shared/constants/*"
      ],
      "@interfaces/*": [
        "app/shared/interfaces/*"
      ],
      "@modules/*": [
        "app/shared/modules/*"
      ],
      "@services/*": [
        "app/shared/services/*"
      ],
      "@shared/*": [
        "app/shared/*"
      ]
    }
  }
}
